[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  whitespace = red reverse
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        autocrlf = input
[alias]
        st = status
        b = branch
        co = checkout
        ll = log --oneline --graph --decorate
[merge]
        tool = meld
        conflictstyle = diff3
[http]
        sslVerify = true
